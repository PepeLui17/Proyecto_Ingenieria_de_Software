<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <application>
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
    </application>

    <managed-bean>
        <managed-bean-name>libroBean</managed-bean-name>
        <managed-bean-class>com.donquijote.bean.BeanLibro</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
        <managed-property>
            <property-name>libroBO</property-name>
            <value>#{libroBO}</value>
        </managed-property>
    </managed-bean>
    
    <managed-bean>
        <managed-bean-name>clienteBean</managed-bean-name>
        <managed-bean-class>com.donquijote.bean.BeanCliente</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
        <managed-property>
            <property-name>clienteBO</property-name>
            <value>#{clienteBO}</value>
        </managed-property>
    </managed-bean>
    
    <managed-bean>
        <managed-bean-name>empleadoBean</managed-bean-name>
        <managed-bean-class>com.donquijote.bean.BeanEmpleado</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
        <managed-property>
            <property-name>empleadoBO</property-name>
            <value>#{empleadoBO}</value>
        </managed-property>
    </managed-bean>
    
</faces-config>

